{
  "name": "RDFaudio",
  "version": "2",
  "manifest_version": 2,
  "description": "Convert BBC Radio track listings to Spotify playlists",
  "permissions": ["identity", "storage"],
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches" : [
        "http://www.bbc.co.uk/programmes/*"
      ],
      "js" : ["content.js"]
    }
  ]
}
